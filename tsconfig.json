{
  "compilerOptions": {
    "target": "ES2024",
    "lib": [
      "ES7",
      "DOM",
      "DOM.Iterable",
      "esnext",
      "ES2024"
    ],
    "noImplicitAny": false, // todo - remove?
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // todo - true?
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // todo - remove?
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "src/*": [
        "./src/*"
      ]
    },
    "strictNullChecks": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/**/*",
    "next-sitemap.config.js",
    ".next/types/**/*.ts",
    "dist/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}